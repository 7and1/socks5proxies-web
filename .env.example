# Backend Configuration
PORT=8080
REDIS_ADDR=localhost:6379
# REQUIRED in production - generate with: openssl rand -base64 32
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0
DB_PATH=./apps/server/data/socksproxies.db

# PostgreSQL (Supabase) - Set to use PostgreSQL instead of SQLite
# DATABASE_URL=your_postgresql_connection_string
DATABASE_SCHEMA=socksproxies

# Proxy Checking
JUDGE_URL=https://api.ipify.org?format=text
GEOIP_DB=
GEOIP_CITY_DB=
GEOIP_ASN_DB=
PROXY_LIST_PATH=
MAX_CONCURRENT=50

# Proxy List Sync
PROXY_SOURCE_URL=
PROXY_SYNC_INTERVAL=5m
PROXY_API_CACHE_TTL=300
PROXY_WEB_CACHE_TTL=3600
API_KEYS=
API_RATE_LIMIT_HOUR=1000
API_RATE_LIMIT_WINDOW=1h
API_RATE_LIMIT_LIGHT=3000
API_RATE_LIMIT_STANDARD=1200
API_RATE_LIMIT_HEAVY=300

# Rate Limiting
RATE_LIMIT_PER_DAY=100
RATE_LIMIT_FREE=100
RATE_LIMIT_BASIC=1000
RATE_LIMIT_PRO=10000

# Security Settings
# IMPORTANT: Set specific origins in production (comma-separated)
# WARNING: Never use * in production - it enables CSRF attacks
ALLOWED_ORIGINS=https://socks5proxies.com,https://www.socks5proxies.com
TRUSTED_PROXIES=127.0.0.1,::1

# Environment: development or production
# In production: stricter CORS, enhanced security logging
ENVIRONMENT=development

# JWT Secret (REQUIRED for production authentication)
# IMPORTANT: Use at least 32 characters for adequate security
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_at_least_32_characters

# WebSocket Settings
MAX_WEBSOCKET_CONNECTIONS=10
MAX_BODY_SIZE_KB=100

# Logging
LOG_LEVEL=info

# Observability (optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_INSECURE=true
OTEL_SERVICE_NAME=socks5proxies-api
SLOW_REQUEST_THRESHOLD=2s
WAF_ENABLED=true
GRAFANA_ADMIN_PASSWORD=changeme

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws
NEXT_PUBLIC_SITE_URL=https://socks5proxies.com

# Affiliate IDs (optional)
NEXT_PUBLIC_AFFILIATE_BRIGHTDATA=
NEXT_PUBLIC_AFFILIATE_OXYLABS=
NEXT_PUBLIC_AFFILIATE_SMARTPROXY=
NEXT_PUBLIC_AFFILIATE_IPROYAL=
NEXT_PUBLIC_AFFILIATE_PROXYSELLER=
